{
	"compilerOptions": {
		"module": "esnext",
		"noImplicitAny": true,
		"sourceMap": true,
		"isolatedModules":false,
		"jsx": "react",
		"allowJs": false,
		"target": "es6",
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"downlevelIteration": true,
		"moduleResolution": "node",
    "baseUrl": ".",
    "strict":true,
		"declaration": true,
		"paths": {
			"@js/*": ["./src/js/*"],
			"@api/*": ["./src/api/*"],
			"@css/*": ["./src/css/*"]
		},
		"lib": ["es2015", "dom", "dom.iterable"],
		"types": ["node"],
		"typeRoots": ["./src/typings"]
	},
	"exclude": ["node_modules"]
}