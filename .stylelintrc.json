{
    "extends": "stylelint-config-standard",
    "plugins": [
        "stylelint-scss"
    ],
    "rules": {
        "at-rule-no-unknown": [ true, {
        "ignoreAtRules": ["use", "include", "extend", "function", "forward", "mixin", "debug","each","if","at-root" ]
      }],
      "no-invalid-position-at-import-rule": true 
    },
    "ignoreFiles": ["**/font.**", "**/*.tsx"]
}